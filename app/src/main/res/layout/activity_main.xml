<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:backgroundTintMode="add"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/castle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="143dp"
        android:layout_alignLeft="@id/backgroundImageView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/asra" />

    <ImageView
        android:id="@+id/enemigoImageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/zom" />

    <Button
        android:id="@+id/moveLeftButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/contador"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-17dp"
        android:layout_marginEnd="59dp"
        android:layout_toStartOf="@id/moveRightButton"
        android:background="@drawable/flechaderecha" />

    <Button
        android:id="@+id/moveRightButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/contador"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/flechaizquierda" />

    <Button
        android:id="@+id/golpearButton"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_below="@id/moveLeftButton"
        android:layout_marginTop="-86dp"
        android:background="@drawable/golpes" />

    <TextView
        android:id="@+id/contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="00"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="229dp"
        android:layout_height="249dp"
        android:layout_alignEnd="@id/golpearButton"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginEnd="-124dp"
        android:layout_marginBottom="-11dp"
        app:srcCompat="@drawable/puerta" />

</RelativeLayout>
